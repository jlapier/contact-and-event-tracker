<p>
  <%= link_to "< Current Version", @contact_revision.current_revision, :class => 'fake_button' %>
</p>
<h1>Contact - Version: <%= @contact_revision.revision_number %><hr /></h1>
<%= render :partial => 'contacts/contact_details', :locals => { :contact => @contact_revision } %>

<% content_for(:sidebar) do %>
<p>
  Modified by <%= @contact_revision.modified_by_user && !@contact_revision.modified_by_user.email.blank? ? @contact_revision.modified_by_user.email[0..-10] + '...' : '<em>unknown</em>' %>
  on <%= @contact_revision.revisable_current_at.strftime "%a, %b %d %Y (%I:%M%p %Z)" %>
</p>
<% end %>